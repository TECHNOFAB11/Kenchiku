{
  "extends": [
    "config:recommended"
  ],
  "gitlabci": {
    "enabled": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:monthly"
    ]
  },
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "branchTopic": "lock-file-maintenance-{{packageFile}}",
      "commitMessageExtra": "({{packageFile}})",
      "description": "Only split Nix lockfile management into separate branches",
      "matchManagers": [
        "nix"
      ],
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ]
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "nix-portable nix run .#soonix:update"
    ]
  }
}
